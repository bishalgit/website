<odoo>
    <data>
        <!-- Assets -->
        <template id="assets_press_frontend" inherit_id="website.assets_frontend" name="Website Press">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/website_press/static/src/css/style.css"/>
            </xpath>
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/website_press/static/src/js/models.js"/>
                <script type="text/javascript" src="/website_press/static/src/js/controllers.js"/>
            </xpath>
        </template>
    </data>
</odoo>